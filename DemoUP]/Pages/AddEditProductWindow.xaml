<Window x:Class="DemoUP_.Pages.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование товара" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Closing="Window_Closing">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Данные товара" Style="{StaticResource LargeHeaderTextStyle}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,20">
            <StackPanel>
                <!-- ID товара (только для редактирования) -->
                <StackPanel x:Name="IdPanel" Visibility="Collapsed">
                    <TextBlock Text="ID товара:" Style="{StaticResource NormalTextStyle}"/>
                    <TextBox x:Name="IdTextBox" Style="{StaticResource TextBoxStyle}" 
                            IsReadOnly="True" Margin="0,5,0,15"/>
                </StackPanel>

                <!-- Изображение товара -->
                <TextBlock Text="Изображение товара:" Style="{StaticResource NormalTextStyle}"/>
                <Border BorderBrush="LightGray" BorderThickness="1" Background="White" 
                       Height="200" Width="300" HorizontalAlignment="Left" Margin="0,5,0,15">
                    <Image x:Name="ProductImage" Stretch="Uniform" Source="/Pages/Image/picture.png"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button x:Name="LoadImageButton" Content="Загрузить изображение" 
                           Click="LoadImageButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="RemoveImageButton" Content="Удалить изображение" 
                           Click="RemoveImageButton_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

                <TextBlock Text="Артикул:" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="ArticulTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,5,0,15"/>

                <TextBlock Text="Название:" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="TitleTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,5,0,15"/>

                <!-- Выпадающие списки -->
                <TextBlock Text="Категория:" Style="{StaticResource NormalTextStyle}"/>
                <ComboBox x:Name="CategoryComboBox" Style="{StaticResource ComboBoxStyle}" 
                         Margin="0,5,0,15" DisplayMemberPath="Gender_product"/>

                <TextBlock Text="Производитель:" Style="{StaticResource NormalTextStyle}"/>
                <ComboBox x:Name="ManufacturerComboBox" Style="{StaticResource ComboBoxStyle}" 
                         Margin="0,5,0,15" DisplayMemberPath="Manufacture1"/>

                <TextBlock Text="Поставщик:" Style="{StaticResource NormalTextStyle}"/>
                <ComboBox x:Name="SupplierComboBox" Style="{StaticResource ComboBoxStyle}" 
                         Margin="0,5,0,15" DisplayMemberPath="Supplier1"/>

                <TextBlock Text="Описание:" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="DescriptionTextBox" Style="{StaticResource TextBoxStyle}" 
                        Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,15"/>

                <TextBlock Text="Цена:" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="CostTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,5,0,15"/>

                <TextBlock Text="Количество:" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="CountTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,5,0,15"/>

                <TextBlock Text="Скидка (%):" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="DiscountTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,5,0,15"/>

                <TextBlock Text="Единица измерения:" Style="{StaticResource NormalTextStyle}"/>
                <TextBox x:Name="UnitTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,5,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Style="{StaticResource PrimaryButtonStyle}" 
                    Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button Content="Отмена" Style="{StaticResource SecondaryButtonStyle}" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>