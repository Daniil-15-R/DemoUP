<Page x:Class="DemoUP_.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoUP_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Просмотр товаров">

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackgroundBrush}"
                Padding="10"
                x:Name="ControlPanelBorder">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- Поиск (только для менеджера/администратора) -->
                <StackPanel x:Name="SearchPanel">
                    <TextBlock Text="Поиск:" 
                               Style="{StaticResource SmallTextStyle}" 
                               Margin="0,0,0,2"
                               FontWeight="Bold"/>
                    <TextBox x:Name="SearchTextBox"
                            Width="250"
                            Style="{StaticResource TextBoxStyle}"
                            Padding="5"
                            TextChanged="SearchTextBox_TextChanged"
                            ToolTip="Поиск по названию, артикулу, описанию, производителю, поставщику и категории"
                            Tag="Поиск по названию, артикулу, описанию..."/>
                </StackPanel>

                <!-- Сортировка (только для менеджера/администратора) -->
                <StackPanel x:Name="SortPanel" Margin="15,0,0,0">
                    <TextBlock Text="Сортировка:" 
                               Style="{StaticResource SmallTextStyle}" 
                               Margin="0,0,0,2"
                               FontWeight="Bold"/>
                    <ComboBox x:Name="SortComboBox"
                             Width="200"
                             SelectionChanged="SortComboBox_SelectionChanged"
                             DisplayMemberPath="Name"
                             ToolTip="Выберите порядок сортировки товаров">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="ToolTip" Value="{Binding Name, RelativeSource={RelativeSource Self}}"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>

                <!-- Фильтр по поставщикам (только для менеджера/администратора) -->
                <StackPanel x:Name="SupplierFilterPanel" Margin="15,0,0,0">
                    <TextBlock Text="Поставщик:" 
                               Style="{StaticResource SmallTextStyle}" 
                               Margin="0,0,0,2"
                               FontWeight="Bold"/>
                    <ComboBox x:Name="SupplierFilterComboBox"
                              Width="180"
                              SelectionChanged="SupplierFilterComboBox_SelectionChanged"
                              DisplayMemberPath="Name"
                              ToolTip="Фильтрация товаров по поставщику">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="ToolTip" Value="{Binding Name, RelativeSource={RelativeSource Self}}"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Vertical" 
                           Margin="20,0,0,0"
                           VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="AddProductButton"
                               Content="Добавить товар"
                               Style="{StaticResource PrimaryButtonStyle}"
                               Click="AddProductButton_Click"
                               ToolTip="Добавить новый товар"
                               Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ProductBorder"
                               Background="{Binding BackgroundColor}"
                               BorderBrush="LightGray"
                               BorderThickness="1"
                               CornerRadius="5"
                               Margin="0,5"
                               Padding="15"
                               MouseLeftButtonDown="ProductBorder_MouseLeftButtonDown"
                               ToolTip="{Binding EditToolTip}">
                            <!-- Добавляем триггер для изменения курсора -->
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Cursor" Value="Arrow"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CanEdit}" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <!-- Изображение товара -->
                                <Border Grid.Column="0" 
                                        Background="LightGray" 
                                        Height="120" 
                                        Width="120"
                                        CornerRadius="5"
                                        ToolTip="Изображение товара">
                                    <Image Source="{Binding ImagePath}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Column="1" Margin="15,0">
                                    <TextBlock Text="{Binding CategoryName}"
                                              Style="{StaticResource SmallTextStyle}"
                                              Foreground="Gray"/>
                                    <TextBlock Text="{Binding TitleName}"
                                              Style="{StaticResource HeaderTextStyle}"
                                              Margin="0,2,0,5"
                                              ToolTip="{Binding Description}"/>
                                    <TextBlock Text="{Binding Description}"
                                              Style="{StaticResource SmallTextStyle}"
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Артикул: "
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="Gray"/>
                                        <TextBlock Text="{Binding Articuls}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  ToolTip="Артикул товара"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Производитель: "
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="Gray"/>
                                        <TextBlock Text="{Binding ManufacturerName}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  ToolTip="Производитель товара"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Поставщик: "
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="Gray"/>
                                        <TextBlock Text="{Binding SupplierName}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  ToolTip="Поставщик товара"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Цены и управление -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <!-- Цены -->
                                    <StackPanel>
                                        <!-- Основная цена -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Цена: "
                                                      Style="{StaticResource NormalTextStyle}"
                                                      FontWeight="Bold"/>
                                            <TextBlock x:Name="OriginalPriceText"
                                                      Text="{Binding OriginalPriceText}"
                                                      Style="{StaticResource NormalTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="{Binding PriceColor}"
                                                      TextDecorations="{Binding PriceDecorations}"
                                                      ToolTip="Цена товара без скидки"/>
                                            <TextBlock Text=" руб."
                                                      Style="{StaticResource NormalTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="{Binding PriceColor}"
                                                      TextDecorations="{Binding PriceDecorations}"/>
                                        </StackPanel>

                                        <!-- Цена со скидкой -->
                                        <StackPanel Orientation="Horizontal" 
                                                   Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="Цена со скидкой: "
                                                      Style="{StaticResource SmallTextStyle}"
                                                      FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DiscountPrice}"
                                                      Style="{StaticResource SmallTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="Black"
                                                      ToolTip="Цена товара с учетом скидки"/>
                                            <TextBlock Text=" руб."
                                                      Style="{StaticResource SmallTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="Black"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Дополнительная информация -->
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Единица измерения: "
                                                  Style="{StaticResource SmallTextStyle}"/>
                                        <TextBlock Text="{Binding Unit}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  ToolTip="Единица измерения товара"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Количество на складе: "
                                                  Style="{StaticResource SmallTextStyle}"/>
                                        <TextBlock Text="{Binding Count}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  FontWeight="Bold"
                                                  ToolTip="Количество товара на складе"/>
                                    </StackPanel>

                                    <!-- Скидка -->
                                    <Border Background="{Binding DiscountBackground}"
                                           CornerRadius="3"
                                           Padding="5,2"
                                           Margin="0,5,0,0"
                                           Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           ToolTip="Размер скидки на товар">
                                        <TextBlock Text="{Binding DiscountText}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  FontWeight="Bold"/>
                                    </Border>

                                    <!-- Статус наличия -->
                                    <TextBlock Text="{Binding StockStatus}"
                                              Style="{StaticResource SmallTextStyle}"
                                              Foreground="{Binding StockStatusColor}"
                                              Margin="0,5,0,0"
                                              FontWeight="Bold"
                                              ToolTip="Статус наличия товара на складе"/>

                                    <!-- Удалить товар (только для администратора) -->
                                    <Button Content="🗑️ Удалить"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="5"
                                           Margin="0,10,0,0"
                                           Click="DeleteProductButton_Click"
                                           Tag="{Binding ID}"
                                           Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           ToolTip="Удалить товар (только для администратора)"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Сообщение при отсутствии товаров -->
        <TextBlock Grid.Row="1"
                  x:Name="NoProductsText"
                  Text="Товары не найдены. Попробуйте изменить параметры поиска или фильтрации."
                  Style="{StaticResource LargeHeaderTextStyle}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Visibility="Collapsed"/>
    </Grid>
</Page>