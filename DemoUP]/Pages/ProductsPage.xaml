<Page x:Class="DemoUP_.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoUP_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Просмотр товаров">

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackgroundBrush}"
                Padding="10"
                x:Name="ControlPanelBorder">
            <StackPanel Orientation="Horizontal">
                <!-- Поиск -->
                <TextBox x:Name="SearchTextBox"
                        Width="250"
                        Style="{StaticResource TextBoxStyle}"
                        Padding="5"
                        TextChanged="SearchTextBox_TextChanged"
                        Tag="Поиск по названию, артикулу, описанию..."/>

                <!-- Сортировка -->
                <ComboBox x:Name="SortComboBox"
                         Width="200"
                         Margin="10,0,0,0"
                         SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem Content="По умолчанию"/>
                    <ComboBoxItem Content="По названию (А-Я)"/>
                    <ComboBoxItem Content="По названию (Я-А)"/>
                    <ComboBoxItem Content="По цене (возрастание)"/>
                    <ComboBoxItem Content="По цене (убывание)"/>
                    <ComboBoxItem Content="По количеству (возрастание)" x:Name="SortByCountAsc"/>
                    <ComboBoxItem Content="По количеству (убывание)" x:Name="SortByCountDesc"/>
                    <ComboBoxItem Content="По скидке (убывание)"/>
                </ComboBox>

                <!-- Фильтры -->
                <ComboBox x:Name="FilterComboBox"
                         Width="150"
                         Margin="10,0,0,0"
                         SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Все товары"/>
                    <ComboBoxItem Content="Со скидкой"/>
                    <ComboBoxItem Content="Большая скидка (>15%)"/>
                    <ComboBoxItem Content="В наличии"/>
                    <ComboBoxItem Content="Нет в наличии"/>
                </ComboBox>
                <!-- В панели управления после существующих элементов -->
                <ComboBox x:Name="SupplierFilterComboBox"
                          Width="180"
                          Margin="10,0,0,0"
                          SelectionChanged="SupplierFilterComboBox_SelectionChanged"
                          DisplayMemberPath="Name">
                </ComboBox>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <Button x:Name="AddProductButton"
                           Content="+ Добавить"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="AddProductButton_Click"
                           Visibility="Collapsed"/>

                    <Button x:Name="ResetFiltersButton"
                           Content="Сбросить"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Click="ResetFiltersButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ProductBorder"
                               Background="{Binding BackgroundColor}"
                               BorderBrush="LightGray"
                               BorderThickness="1"
                               CornerRadius="5"
                               Margin="0,5"
                               Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
        Background="LightGray" 
        Height="120" 
        Width="120"
        CornerRadius="5">
                                    <Image Source="{Binding ImagePath}"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0">
                                    <TextBlock Text="{Binding CategoryName}"
                                              Style="{StaticResource SmallTextStyle}"
                                              Foreground="Gray"/>
                                    <TextBlock Text="{Binding TitleName}"
                                              Style="{StaticResource HeaderTextStyle}"
                                              Margin="0,2,0,5"/>
                                    <TextBlock Text="{Binding Description}"
                                              Style="{StaticResource SmallTextStyle}"
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Артикул: "
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="Gray"/>
                                        <TextBlock Text="{Binding Articuls}"
                                                  Style="{StaticResource SmallTextStyle}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Производитель: "
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="Gray"/>
                                        <TextBlock Text="{Binding ManufacturerName}"
                                                  Style="{StaticResource SmallTextStyle}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Поставщик: "
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="Gray"/>
                                        <TextBlock Text="{Binding SupplierName}"
                                                  Style="{StaticResource SmallTextStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Цены и управление -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <!-- Цены -->
                                    <StackPanel>
                                        <!-- Основная цена -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Цена: "
                                                      Style="{StaticResource NormalTextStyle}"
                                                      FontWeight="Bold"/>
                                            <TextBlock x:Name="OriginalPriceText"
                                                      Text="{Binding OriginalPriceText}"
                                                      Style="{StaticResource NormalTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="{Binding PriceColor}"
                                                      TextDecorations="{Binding PriceDecorations}"/>
                                            <TextBlock Text=" руб."
                                                      Style="{StaticResource NormalTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="{Binding PriceColor}"
                                                      TextDecorations="{Binding PriceDecorations}"/>
                                        </StackPanel>

                                        <!-- Цена со скидкой -->
                                        <StackPanel Orientation="Horizontal" 
                                                   Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="Цена со скидкой: "
                                                      Style="{StaticResource SmallTextStyle}"
                                                      FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DiscountPrice}"
                                                      Style="{StaticResource SmallTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="Black"/>
                                            <TextBlock Text=" руб."
                                                      Style="{StaticResource SmallTextStyle}"
                                                      FontWeight="Bold"
                                                      Foreground="Black"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Дополнительная информация -->
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Единица измерения: "
                                                  Style="{StaticResource SmallTextStyle}"/>
                                        <TextBlock Text="{Binding Unit}"
                                                  Style="{StaticResource SmallTextStyle}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Количество на складе: "
                                                  Style="{StaticResource SmallTextStyle}"/>
                                        <TextBlock Text="{Binding Count}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Скидка -->
                                    <Border Background="{Binding DiscountBackground}"
                                           CornerRadius="3"
                                           Padding="5,2"
                                           Margin="0,5,0,0"
                                           Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding DiscountText}"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  FontWeight="Bold"/>
                                    </Border>

                                    <!-- Статус наличия -->
                                    <TextBlock Text="{Binding StockStatus}"
                                              Style="{StaticResource SmallTextStyle}"
                                              Foreground="{Binding StockStatusColor}"
                                              Margin="0,5,0,0"
                                              FontWeight="Bold"/>

                                    <!-- Кнопки управления для админа/менеджера -->
                                    <StackPanel Orientation="Horizontal" 
                                               Margin="0,10,0,0"
                                               Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Content="✏️"
                                               Style="{StaticResource SecondaryButtonStyle}"
                                               Padding="5"
                                               Click="EditProductButton_Click"
                                               Tag="{Binding ID}"/>
                                        <Button Content="🗑️"
                                               Style="{StaticResource SecondaryButtonStyle}"
                                               Padding="5"
                                               Margin="5,0,0,0"
                                               Click="DeleteProductButton_Click"
                                               Tag="{Binding ID}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Сообщение при отсутствии товаров -->
        <TextBlock Grid.Row="1"
                  x:Name="NoProductsText"
                  Text="Товары не найдены"
                  Style="{StaticResource LargeHeaderTextStyle}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Visibility="Collapsed"/>
    </Grid>
</Page>