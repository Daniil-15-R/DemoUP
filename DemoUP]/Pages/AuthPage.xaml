<Page x:Class="DemoUP_.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoUP_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <!-- Центральный контейнер -->
        <Border Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="10"
                Padding="{StaticResource PaddingLarge}"
                Width="400"
                Height="350"
                BorderBrush="LightGray"
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                          Text="Вход в систему"
                          Style="{StaticResource LargeHeaderTextStyle}"/>

                <!-- Логин -->
                <TextBlock Grid.Row="2"
                          Text="Логин:"
                          Style="{StaticResource NormalTextStyle}"
                          FontWeight="SemiBold"/>

                <TextBox Grid.Row="2"
                        x:Name="LoginTextBox"
                        Style="{StaticResource TextBoxStyle}" Margin="0,24,0,4" Grid.RowSpan="6"/>

                <!-- Пароль -->
                <TextBlock Grid.Row="9"
                          Text="Пароль:"
                          Style="{StaticResource NormalTextStyle}"
                          FontWeight="SemiBold" Margin="0,6,10,-2" Grid.RowSpan="2"/>

                <PasswordBox Grid.Row="10"
                            x:Name="PasswordBox"
                            Style="{StaticResource PasswordBoxStyle}" Margin="0,10,0,-49"/>

                <!-- Сообщение об ошибке -->
                <TextBlock Grid.Row="6"
                          x:Name="ErrorTextBlock"
                          Style="{StaticResource SmallTextStyle}"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="10"
                           Orientation="Horizontal"
                           HorizontalAlignment="Center" Margin="0,61,0,-115">
                    <Button x:Name="LoginButton"
                           Content="Войти"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Padding="{StaticResource PaddingNormal}"
                           Click="LoginButton_Click"/>

                    <Button x:Name="GuestButton"
                           Content="Войти как гость"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Padding="{StaticResource PaddingNormal}"
                           Margin="15,0,0,0"
                           Click="GuestButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>