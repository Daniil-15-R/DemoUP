<Page x:Class="DemoUP_.Pages.OrdersManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление заказами">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить заказ" Click="AddOrderButton_Click" Margin="0,0,10,0"/>
            <Button Content="Редактировать" Click="EditOrderButton_Click" Margin="0,0,10,0"/>
            <Button Content="Обновить статус" Click="UpdateOrderStatusButton_Click" Margin="0,0,10,0"/>
            <Button Content="Обновить список" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Список заказов -->
        <DataGrid Grid.Row="1" 
                  x:Name="OrdersGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID заказа" Binding="{Binding ID_order}" Width="80"/>
                <DataGridTextColumn Header="Номер заказа" Binding="{Binding Numer_order}" Width="100"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding Date_order, StringFormat=dd.MM.yyyy}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status.Status1}" Width="120"/>
                <DataGridTextColumn Header="Пункт выдачи" Binding="{Binding PVZ.Adress}" Width="200"/>
                <DataGridTextColumn Header="Код получения" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="ФИО клиента" Binding="{Binding FIO.FIO1}" Width="200"/>
                <DataGridTextColumn Header="Кол-во товаров" Binding="{Binding Sostav.Count}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>