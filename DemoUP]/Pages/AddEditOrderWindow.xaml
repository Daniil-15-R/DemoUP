<Window x:Class="DemoUP_.Pages.AddEditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoUP_.Pages"
        mc:Ignorable="d"
        Title="Добавление/редактирование заказа" Height="550" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Номер заказа:"/>
                <TextBox x:Name="txtOrderNumber" Text="{Binding Numer_order}"/>

                <TextBlock Text="Дата заказа:" Margin="0,10,0,0"/>
                <DatePicker x:Name="dpOrderDate" SelectedDate="{Binding Date_order}"/>

                <TextBlock Text="Дата доставки:" Margin="0,10,0,0"/>
                <DatePicker x:Name="dpDeliveryDate" SelectedDate="{Binding Date_delivery}"/>

                <TextBlock Text="Код заказа:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtCode" Text="{Binding Code}" IsEnabled="False" Background="LightGray"/>

                <TextBlock Text="ПВЗ:" Margin="0,10,0,0"/>
                <ComboBox x:Name="cmbPVZ" DisplayMemberPath="Index_PVZ"
                         SelectedValuePath="ID"/>

                <TextBlock Text="Статус:" Margin="0,10,0,0"/>
                <ComboBox x:Name="cmbStatus" DisplayMemberPath="Status1"
                         SelectedValuePath="ID"/>

                <TextBlock Text="Клиент:" Margin="0,10,0,0"/>
                <ComboBox x:Name="cmbClient" DisplayMemberPath="FIO1"
                         SelectedValuePath="ID"/>

                <TextBlock Text="Состав заказа:" Margin="0,10,0,0"/>
                <ComboBox x:Name="cmbSostav" DisplayMemberPath="ID"
                         SelectedValuePath="ID"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" 
                           Width="100" Height="30" Margin="0,0,10,0"/>
                    <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click" 
                           Width="100" Height="30"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>