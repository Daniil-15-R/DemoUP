<Page x:Class="DemoUP_.Pages.ProductsManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление товарами">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить товар" Click="AddProductButton_Click" Margin="0,0,10,0"/>
            <Button Content="Редактировать" Click="EditProductButton_Click" Margin="0,0,10,0"/>
            <Button Content="Обновить" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Список товаров -->
        <DataGrid Grid.Row="1" 
                  x:Name="ProductsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Articuls}" Width="100"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title.Title_product}" Width="200"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Cost}" Width="80"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="80"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount}" Width="60"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Gender.Gender_product}" Width="120"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacture1.Manufacture1}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>